<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="20dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <TextView
              android:id="@+id/ch_number_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Ch NÂº." />
            <TextView
                android:id="@+id/chambre_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="210" />

            <TextView
                android:id="@+id/nom_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="60pt"
                android:text=" NDUWIMANA Guy-Michel " />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_checkin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From : "/>
            <TextView
                android:id="@+id/date_checkin"
                android:layout_height="match_parent"
                android:textSize="7pt"
                android:text="07/06/2021"
                android:layout_width="wrap_content" />
            <TextView
                android:id="@+id/date_checkout_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50pt"
                android:text="To : "/>
            <TextView
                android:id="@+id/date_checkout"
                android:layout_height="match_parent"
                android:textSize="7pt"
                android:text="14/06/2021"
                android:layout_width="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price_chambre_label"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#6A90B5"
                android:layout_height="wrap_content"
                android:text="Prix:" />
            <TextView
                android:id="@+id/price_chambre"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#6A90B5"
                android:layout_height="wrap_content"
                android:text=" 250.000 " />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#6A90B5"
                android:layout_height="wrap_content"
                android:text="Fbu" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_order_cancel"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="0dp"
                        android:text="Annuler"
                        android:textColor="#f00" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
